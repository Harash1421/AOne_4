<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414141"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:ems="10"
            android:hint="@string/Phone"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#838181"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edMessageText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:hint="@string/Message_Text"
            android:inputType="textPersonName"
            android:paddingLeft="7sp"
            android:paddingRight="7sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#838181"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edPhone" />

        <Button
            android:id="@+id/buSend"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="135dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:background="@drawable/bu_design"
            android:text="@string/Send"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edMessageText" />

        <Button
            android:id="@+id/buSendCustomer"
            android:layout_width="150dp"
            android:layout_height="57dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="104dp"
            android:background="@drawable/bu_design"
            android:text="@string/Send_Customer"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buSend" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>